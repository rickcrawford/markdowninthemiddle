# Markdown in the Middle - Docker Environment Variables

# Proxy Configuration
MITM_CONFIG=/etc/markdowninthemiddle/config.yml
MITM_PROXY_ADDR=0.0.0.0:8080
MITM_LOG_LEVEL=info

# Transport (http or chromedp)
MITM_TRANSPORT_TYPE=chromedp
MITM_TRANSPORT_CHROMEDP_URL=http://chrome:9222
MITM_TRANSPORT_CHROMEDP_POOL_SIZE=5

# Conversion Settings
MITM_CONVERSION_ENABLED=true
MITM_CONVERSION_NEGOTIATE_ONLY=false
MITM_CONVERSION_CONVERT_JSON=false
MITM_CONVERSION_TEMPLATE_DIR=

# TLS/HTTPS (set TLS_ENABLED=true and mount certs or auto-generate)
MITM_TLS_ENABLED=false
MITM_TLS_CERT_FILE=/etc/markdowninthemiddle/certs/cert.pem
MITM_TLS_KEY_FILE=/etc/markdowninthemiddle/certs/key.pem
MITM_TLS_AUTO_CERT=true

# Caching
MITM_CACHE_ENABLED=false
MITM_CACHE_DIR=/var/cache/markdowninthemiddle

# Output
MITM_OUTPUT_ENABLED=false
MITM_OUTPUT_DIR=/var/log/markdowninthemiddle/output

# Body Size Limit (bytes, 0 = unlimited)
MITM_MAX_BODY_SIZE=10485760
